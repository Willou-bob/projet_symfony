{% extends 'base.html.twig' %}
{% block title %}{{ episode.id }}{% endblock %}

{% block body %}

        <h1>Série {{ program.title }} </h1>
        <div class="card bg-light mb-3" style="max-width: 18rem;">
            <div class="card-header">Episode {{ episode.number }}</div>
            <div class="card-body">
                <h5 class="card-title">Title: {{ episode.title }}</h5>
                <p class="card-text">Synopsis: {{ episode.synopsis }}</p>
            </div>
        </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

    <a class="ml-5" href="{{ path('show_program', {'programTitle': program.title }) }}">{{program.title}}</a>

    <a class="ml-5" href="{{ path('show_season', {'id': season.id }) }}"> Season {{season.number}}</a>

    <h2>Commentaires</h2>

    {% if app.user %}
        {{ include('comment/_form.html.twig') }}
    {% else %}
        Vous devez être connecté pour poster un commentaire.
    {% endif %}

{% endblock %}