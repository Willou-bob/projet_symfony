{% extends 'base.html.twig' %}

{% block title %}{{ actor.name }}{% endblock %}

{% block body %}
    <div class="card mt-5" style="">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{ actor.picture }}" class="card-img" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ actor.name }}</h5>
                    <p class="card-text">{{ actor.biography }}</p>
                    {% for program in actor.programs %}
                        <a href="{{  path('show_program', {'programTitle': program.title }) }}" class="btn btn-primary">{{ program.title }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}