{# templates/wild/show.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}{{ slug }}{% endblock %}

{% block body %}

    <div class="media mt-5">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-5">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p class="mb-5">Categorie : {{ program.category.name }}</p>
            <ul>
                {% for season in program.seasons %}
                    <div class="card bg-light mb-5 mr-5" style="">
                        <div class="card-header d-flex justify-content-between">
                            <a href="{{ path('show_season', {'id': season.id }) }}"> Saison {{ season.number }}</a>
                            <h5 class="card-title">{{ season.year }}</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">Description: {{ season.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </ul>

            <strong>Acteur :</strong>
            <ul>
                {% for actor in program.actors %}
                    <li><a href="{{ path('show_actor', {'id': actor.id }) }}">{{ actor.name }}</a></li>
                {% else %}
                    <li>Aucun acteur pour cette série</li>
                {% endfor %}
            </ul>

        </div>
    </div>

    <a href="{{ path('wild_index') }}">
        Retour à l'accueil
    </a>

{% endblock %}
